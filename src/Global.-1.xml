                   height="30"
                   width="550"
                   lineType="MultiLineNewLine"
                   onValueChanged="clueEntered">
       </InputField>
</Panel>

<Panel id="timerPanel"
       width="100"
       height="45"
       rectAlignment="UpperCenter"
       offsetXY="0 -75">
  <Text id="timer"
        active="false"
        fontSize="50"
        width="100"
        height="45"
        rectAlignment="MiddleCenter"
        resizeTextForBestFit="true"
        color="#ffffff"
        outline="#000000"
        outlinesize="1 -1"
        allowDragging="true"
        restrictDraggingToParentBounds="false"
        returnToOriginalPositionWhenReleased="false">
        10:00
  </Text>
</Panel>